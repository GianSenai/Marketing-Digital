<script>
const body = document.body;
const btn = document.getElementById('themeToggle');
const themes = ['light','dark','purple'];
let idx = 0;

// Carrega tema salvo
const saved = localStorage.getItem('theme');
if(saved && themes.includes(saved)){
  idx = themes.indexOf(saved);
  body.classList.add(saved);
}

// Alterna temas
btn.addEventListener('click', ()=>{
  body.classList.remove(themes[idx]);
  idx = (idx+1)%themes.length;
  body.classList.add(themes[idx]);
  localStorage.setItem('theme', themes[idx]);
});

// Reveal cards
const io = new IntersectionObserver(entries=>{
  entries.forEach(e=>{
    if(e.isIntersecting){ e.target.classList.add('reveal'); io.unobserve(e.target); }
  });
},{threshold:.12});
document.querySelectorAll('.panel, .card').forEach(el=>io.observe(el));
</script>

